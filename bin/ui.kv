#:set text_cpu_load "CPU (Load)"
#:set text_ram_busy "RAM (Busy)"
#:set text_ram_total "RAM (Total)"
#:set text_swap_busy "SWAP (Busy)"
#:set text_swap_total "SWAP (Total)"
#:set text_loading "Loading..."

TabbedPanel:
    do_default_tab: False
    TabbedPanelItem:
        text: "BSI"
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                cols: 3
                rows: 1
                Label:
                    text: text_cpu_load
                ProgressBar:
                    id: ProgressBarCPULoad
                    max: 100
                Label:
                    id: LabelCPULoad
                    text: text_loading
            GridLayout:
                cols: 3
                rows: 1
                Label:
                    text: text_ram_busy
                ProgressBar:
                    id: ProgressBarRAMBusy
                    max: 100
                Label:
                    id: LabelRAMBusy
                    text: text_loading
            GridLayout:
                cols: 3
                rows: 1
                Label:
                    text: text_ram_total
                ProgressBar:
                    max: 100
                    value: 100
                Label:
                    id: LabelRAMTotal
                    text: text_loading
            GridLayout:
                cols: 3
                rows: 1
                Label:
                    text: text_swap_busy
                ProgressBar:
                    id: ProgressBarSWAPBusy
                    max: 100
                Label:
                    id: LabelSWAPBusy
                    text: text_loading
            GridLayout:
                cols: 3
                rows: 1
                Label:
                    text: text_swap_total
                ProgressBar:
                    max: 100
                    value: 100
                Label:
                    id: LabelSWAPTotal
                    text: text_loading
