MDScreen:
    MDNavigationLayout:
        MDScreenManager:
            id: main_screen_manager
            BSIScreen:
                name: 'bsi'
                BSILineGridLayout:
                    BSICenterLabel:
                        text: "CPU (Load)"
                    MDProgressBar:
                        id: ProgressBarCPULoad
                        max: 100
                    BSICenterLabel:
                        id: LabelCPULoad
                        text: "Loading..."
                BSILineGridLayout:
                    BSICenterLabel:
                        text: "RAM (Busy)"
                    MDProgressBar:
                        id: ProgressBarRAMBusy
                        max: 100
                    BSICenterLabel:
                        id: LabelRAMBusy
                        text: "Loading..."
                BSILineGridLayout:
                    BSICenterLabel:
                        text: "RAM (Total)"
                    MDProgressBar:
                        max: 100
                        value: 100
                    BSICenterLabel:
                        id: LabelRAMTotal
                        text: "Loading..."
                BSILineGridLayout:
                    BSICenterLabel:
                        text: "SWAP (Busy)"
                    MDProgressBar:
                        id: ProgressBarSWAPBusy
                        max: 100
                    BSICenterLabel:
                        id: LabelSWAPBusy
                        text: "Loading..."
                BSILineGridLayout:
                    BSICenterLabel:
                        text: "SWAP (Total)"
                    MDProgressBar:
                        max: 100
                        value: 100
                    BSICenterLabel:
                        id: LabelSWAPTotal
                        text: "Loading..."
        MDTopAppBar:
            title: "BSI"
            elevation: 4
            pos_hint: {"top": 1}
            left_action_items: [["menu", lambda x: main_navigate_menu.set_state("open")]]
        MDNavigationDrawer:
            id: main_navigate_menu
            radius: (0, 16, 16, 0)
            MDNavigationDrawerMenu:
                id: main_navigate_menu_driwer
                MDNavigationDrawerHeader:
                    title: "BSI"
                    source: app.icon
                    text: app.bsi_version
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"
                MDNavigationDrawerLabel:
                    text: "Sections"
                BSINavigationDrawerItem:
                    icon: "cellphone-information"
                    text: "Basic System Info"
                    selected: True
                    on_release: main_screen_manager.current = 'bsi'
